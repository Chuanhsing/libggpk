<Window x:Class="VisualGGPK.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto" MinWidth="128"/>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		
		<TreeView Grid.Column="0" Name="treeView1" SelectedItemChanged="treeView1_SelectedItemChanged">
			<TreeView.ContextMenu>
				<ContextMenu Name="treeView1ContextMenu">
					<MenuItem Name="menuItemExport" Header="Export" Click="menuItemExport_Click" IsEnabled="False">
						
					</MenuItem>
					<MenuItem Name="menuItemReplace" Header="Replace" Click="menuItemReplace_Click" IsEnabled="False"/>
				</ContextMenu>
			</TreeView.ContextMenu>
		</TreeView>
		<GridSplitter Grid.Column="0"  Name="gridSplitter1"  Width="3" Visibility="Visible"  />

		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>
			<TextBox  Name="textBoxOutput" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Visibility="Visible" FontFamily="Consolas" FontSize="13" IsReadOnly="True"/>
			<Image  Name="imageOutput" Stretch="None" Visibility="Hidden" />
			<RichTextBox   Name="richTextOutput" Visibility="Hidden" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
			<DataGrid AutoGenerateColumns="False" Name="dataGridOutput" Visibility="Hidden" IsReadOnly="True"/>
			<StackPanel Grid.Row="1" Orientation="Horizontal">
				<Label>File Offset:</Label>
				<TextBox Name="textBoxOffset" Width="100" IsReadOnly="True"/>
			</StackPanel>
		</Grid>

	</Grid>
</Window>
